---
import Layout from '../layouts/Layout.astro';
import SocialMedia from '../components/SocialMedia.astro';

const pageTitle = "Servicios | Cargo Legends RP";
const pageDescription = "Descubre todos los servicios que ofrecemos en nuestra comunidad de roleplay";

const services = [
    {
        title: "Transporte de Mercancías",
        description: "Servicios de transporte de carga por toda la región con diferentes tipos de vehículos y cargas especializadas.",
        icon: "🚛"
    },
    {
        title: "Eventos Especiales",
        description: "Organizamos convoys, competencias y eventos temáticos para toda la comunidad.",
        icon: "🎮"
    },
    {
        title: "Capacitación RP",
        description: "Formación en roleplay, normas de conducción y simulación realista para nuevos miembros.",
        icon: "📚"
    },
    {
        title: "Comunidad VTC",
        description: "Forma parte de nuestra empresa virtual de transporte con rangos y progresión.",
        icon: "🏢"
    }
];
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 pt-24 pb-8">
        <div class="min-h-screen">
            <h1 class="text-4xl font-bold text-center mb-12 text-white">Nuestros Servicios</h1>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
                {services.map(service => (
                    <div class="service-card">
                        <div class="service-icon">{service.icon}</div>
                        <h2 class="service-title">{service.title}</h2>
                        <p class="service-description">{service.description}</p>
                    </div>
                ))}
            </div>

            <div class="text-center mt-12">
                <a href="/contact" class="cta-button">
                    ¿Interesado? ¡Contáctanos!
                </a>
            </div>
        </div>
    </main>
    <SocialMedia />
</Layout>

<style>
    .service-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        border: 1px solid rgba(34, 211, 238, 0.2);
        backdrop-filter: blur(8px);
    }

    .service-card:hover {
        transform: translateY(-5px);
        border-color: rgba(34, 211, 238, 0.4);
    }

    .service-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .service-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-align: center;
        color: #fff;
    }

    .service-description {
        color: #ccc;
        line-height: 1.6;
        text-align: center;
    }

    .cta-button {
        display: inline-block;
        background: rgba(34, 211, 238, 0.1);
        color: #22d3ee;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid rgba(34, 211, 238, 0.3);
    }

    .cta-button:hover {
        background: rgba(34, 211, 238, 0.2);
        border-color: rgba(34, 211, 238, 0.5);
        box-shadow: 0 0 15px rgba(34, 211, 238, 0.3);
    }

    @media (max-width: 768px) {
        .service-card {
            margin-bottom: 1rem;
        }
    }
</style>
