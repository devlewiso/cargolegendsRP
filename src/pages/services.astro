---
import Layout from '../layouts/Layout.astro';
import SocialMedia from '../components/SocialMedia.astro';

const pageTitle = "Servicios | Cargo Legends RP";
const pageDescription = "Descubre todos los servicios que ofrecemos en nuestra comunidad de roleplay";

const services = [
    {
        title: "Transporte de Mercancías",
        description: "Servicios de transporte de carga por toda la región con diferentes tipos de vehículos y cargas especializadas.",
        icon: "🚛"
    },
    {
        title: "Eventos Especiales",
        description: "Organizamos convoys, competencias y eventos temáticos para toda la comunidad.",
        icon: "🎮"
    },
    {
        title: "Capacitación RP",
        description: "Formación en roleplay, normas de conducción y simulación realista para nuevos miembros.",
        icon: "📚"
    },
    {
        title: "Comunidad VTC",
        description: "Forma parte de nuestra empresa virtual de transporte con rangos y progresión.",
        icon: "🏢"
    }
];
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 pt-24 pb-8">
        <div class="min-h-screen">


            <!-- Sección de servicios -->
            <h1 class="text-4xl font-bold text-center mb-12 text-white">Nuestros Servicios</h1>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
                {services.map(service => (
                    <div class="service-card">
                        <div class="service-icon">{service.icon}</div>
                        <h2 class="service-title">{service.title}</h2>
                        <p class="service-description">{service.description}</p>
                    </div>
                ))}
            </div>

            <div class="text-center mt-12 mb-16">
                <a href="/contact" class="cta-button">
                    ¿Interesado? ¡Contáctanos!
                </a>
            </div>

                        <!-- Sección de llamado a acción -->
                        <div class="relative overflow-hidden rounded-lg mb-12">
                            <img 
                                src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80" 
                                alt="Conductores de ETS2 en acción"
                                class="w-full h-[400px] object-cover transition-transform duration-500 hover:scale-105"
                            />
                            <div class="absolute inset-0 bg-black bg-opacity-40 transition-opacity duration-500 hover:bg-opacity-50"></div>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <div class="text-center px-4">
                                    <h3 class="text-3xl font-bold text-white mb-4">¡Únete a nuestra comunidad!</h3>
                                    <p class="text-xl text-gray-200 mb-6">¡Conduce con nosotros en ETS2 y conviértete en parte de nuestra familia de conductores!</p>
                                    <a href="#" 
                                       class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-300"
                                       target="_blank" rel="noopener noreferrer">
                                        Unirse al Discord
                                    </a>
                                </div>
                            </div>
                        </div>
        </div>
    </main>
    <SocialMedia />
</Layout>

<style>
    .service-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        border: 1px solid rgba(34, 211, 238, 0.2);
        backdrop-filter: blur(8px);
    }

    .service-card:hover {
        transform: translateY(-5px);
        border-color: rgba(34, 211, 238, 0.4);
    }

    .service-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .service-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-align: center;
        color: #fff;
    }

    .service-description {
        color: #ccc;
        line-height: 1.6;
        text-align: center;
    }

    .cta-button {
        display: inline-block;
        background: rgba(34, 211, 238, 0.1);
        color: #22d3ee;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid rgba(34, 211, 238, 0.3);
    }

    .cta-button:hover {
        background: rgba(34, 211, 238, 0.2);
        border-color: rgba(34, 211, 238, 0.5);
        box-shadow: 0 0 15px rgba(34, 211, 238, 0.3);
    }

    @media (max-width: 768px) {
        .service-card {
            margin-bottom: 1rem;
        }
    }

    .container {
        max-width: 1200px;
    }

    @media (max-width: 768px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
</style>
