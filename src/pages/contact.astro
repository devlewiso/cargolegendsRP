---
import Layout from '../layouts/Layout.astro';
import SocialMedia from '../components/SocialMedia.astro';
import Sponsors from '../components/sponsors.astro';

const pageTitle = "Únete | Cargo Legends RP";
const pageDescription = "Únete a nuestra comunidad de transportistas virtuales en Discord y conviértete en parte de la leyenda";

const discordInfo = {
    title: "Discord Oficial",
    description: "Únete a nuestra comunidad activa de más de 100 transportistas. Participa en eventos, convoys y mucho más.",
    serverLink: "https://discord.gg/3jVtXR3WEa",
    features: [
        "Eventos semanales",
        "Sistema de rangos",
        "Convoys organizados",
        "Comunidad activa 24/7",
        "Sistema de recompensas",
        "Eventos especiales mensuales"
    ]
};

const currentPromotions = [
    {
        title: "Bienvenida a la Comunidad",
        description: "¡Recibe un bono de bienvenida con skins exclusivos y acceso a canales especiales!"
    },
    {
        title: "Concurso de Conducción",
        description: "Participa en nuestro concurso mensual con premios especiales para los mejores conductores"
    },
    {
        title: "Sistema de Referidos",
        description: "Invita a amigos y gana recompensas especiales por cada nuevo miembro que traigas"
    }
];

const communityStats = {
    members: "150+",
    events: "20+",
    convoys: "30+",
    activeDrivers: "50+"
};
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 pt-24 pb-8">
        <div class="min-h-screen">
            <h1 class="text-4xl font-bold text-center mb-8 text-white cyber-glow">
                Únete a Cargo Legends RP
            </h1>

            <!-- Sección de Beneficios -->
            <div class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-white">¿Por qué unirte?</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {discordInfo.features.map((feature) => (
                        <div class="feature-card p-6 rounded-lg bg-black/10 hover:bg-black/20 transition-colors duration-300">
                            <div class="feature-icon mb-4">✨</div>
                            <h3 class="text-xl font-semibold mb-2 text-white">{feature}</h3>
                            <p class="text-gray-300">Detalles sobre {feature.toLowerCase()}</p>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Sección de Promociones -->
            <div class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-white">Promociones Actuales</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {currentPromotions.map((promotion) => (
                        <div class="promotion-card p-6 rounded-lg bg-gradient-to-r from-purple-600 to-blue-600 text-white hover:from-purple-700 hover:to-blue-700 transition-colors duration-300">
                            <h3 class="text-xl font-semibold mb-2">{promotion.title}</h3>
                            <p class="text-gray-200">{promotion.description}</p>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Sección de Estadísticas -->
            <div class="mb-16 text-center">
                <h2 class="text-3xl font-bold text-white mb-8">Nuestra Comunidad</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    {Object.entries(communityStats).map(([key, value]) => (
                        <div class="stat-card p-6 rounded-lg bg-black/10 hover:bg-black/20 transition-colors duration-300">
                            <h3 class="text-2xl font-bold text-blue-400">{value}</h3>
                            <p class="text-gray-300">
                                {key === 'activeDrivers' ? 'Conductores Activos' : 
                                 key === 'convoys' ? 'Convoys Organizados' : 
                                 key === 'events' ? 'Eventos Mensuales' : 'Miembros'}
                            </p>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Sección de Discord -->
            <div class="discord-card mb-16">
                <i class="fab fa-discord discord-icon"></i>
                <h2 class="discord-title">{discordInfo.title}</h2>
                <p class="discord-description">{discordInfo.description}</p>
                
                <div class="features-grid">
                    {discordInfo.features.map((feature) => (
                        <div class="feature-item">
                            <i class="fas fa-check feature-icon"></i>
                            <span>{feature}</span>
                        </div>
                    ))}
                </div>

                <a href="https://discord.gg/3jVtXR3WEa" target="_blank" rel="noopener noreferrer" class="join-button" aria-label="Unirse al servidor de Discord de Cargo Legends RP">
                    <i class="fab fa-discord"></i>
                    Unirse al Servidor
                </a>
            </div>
        </div>
    </main>
    <SocialMedia />
</Layout>

<style>
    .container { max-width: 1200px; }
    
    .cyber-glow {
        text-shadow: 0 0 10px rgba(34, 211, 238, 0.5),
                     0 0 20px rgba(34, 211, 238, 0.3);
    }

    .discord-card {
        max-width: 600px;
        margin: 2rem auto;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 1rem;
        padding: 2.5rem;
        text-align: center;
        border: 1px solid rgba(34, 211, 238, 0.2);
        backdrop-filter: blur(8px);
        transition: all 0.3s ease;
    }

    .discord-card:hover {
        border-color: rgba(34, 211, 238, 0.4);
        box-shadow: 0 0 20px rgba(34, 211, 238, 0.2);
    }

    .discord-icon {
        font-size: 4rem;
        color: #7289da;
        margin-bottom: 1.5rem;
        filter: drop-shadow(0 0 10px rgba(114, 137, 218, 0.5));
    }

    .discord-title {
        font-size: 2rem;
        font-weight: bold;
        color: white;
        margin-bottom: 1rem;
        text-shadow: 0 0 10px rgba(34, 211, 238, 0.3);
    }

    .discord-description {
        color: #ccc;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
        text-align: left;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #fff;
        padding: 0.5rem;
        background: rgba(34, 211, 238, 0.1);
        border-radius: 0.5rem;
        border: 1px solid rgba(34, 211, 238, 0.2);
    }

    .join-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #7289da;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .join-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 20px rgba(114, 137, 218, 0.4);
        background: #8299ea;
    }

    .feature-icon { font-size: 2rem; }

    .stat-card,
    .promotion-card {
        transition: transform 0.3s ease;
    }
    
    .stat-card:hover,
    .promotion-card:hover {
        transform: translateY(-5px);
    }

    @media (max-width: 768px) {
        .container { padding: 0 1rem; }
        .features-grid { grid-template-columns: 1fr; }
        .discord-card { margin: 1rem; padding: 1.5rem; }
    }
</style>