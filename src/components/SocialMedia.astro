---
const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/TU_USUARIO_REAL',
    icon: 'fab fa-github'
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/TU_USUARIO_REAL',
    icon: 'fab fa-linkedin'
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/TU_USUARIO_REAL',
    icon: 'fab fa-twitter'
  }
];
---

<div class="social-media">
  {
    socialLinks.map(({ name, url, icon }) => (
      <a 
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label={name}
      >
        <i class={icon}></i>
      </a>
    ))
  }
</div>

<style>
  .social-media {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin: 2rem 0;
  }

  .social-link {
    color: #666;
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: #000;
  }
</style>
