---
import background from '../assets/mainBG.jpg';
---

<div class="hover-container">
    <div class="content">
        <h1>Cargo Legends RP</h1>
        <p>Únete a la comunidad de transportistas más grande</p>
        <div class="cta-buttons">
            <button class="btn primary">Comenzar Aventura</button>
            <button class="btn secondary">Discord</button>
        </div>
    </div>
</div>

<style>
    .hover-container {
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        position: relative;
        background-image: url('../assets/mainBG.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .hover-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.4));
        z-index: 1;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }

    h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        padding: 1rem 2rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .primary {
        background-color: #ff4d4d;
        color: white;
    }

    .secondary {
        background-color: #7289da;
        color: white;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }

        p {
            font-size: 1.2rem;
        }

        .cta-buttons {
            flex-direction: column;
        }
    }
</style>
